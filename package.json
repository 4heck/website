{
  "name": "karamoff.dev",
  "version": "4.7.2",
  "license": "MIT",
  "private": true,
  "author": "Nikita Karamov <nick@karamoff.dev>",
  "homepage": "https://karamoff.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NickKaramoff/website.git"
  },
  "scripts": {
    "build:pug": "pug ./src/index.pug --obj ./src/pugData.js --out ./public",
    "build:sass": "sass --load-path=node_modules/normalize.css/ ./src/scss/main.scss | postcss -o public/index.css",
    "build:static": "ncp 'src/static' 'public'",
    "build:vavilon": "node ./build/vavilon.js",
    "build": "run-p build:*",
    "dev": "watchlist src build -- yarn build",
    "start": "sirv public --dev"
  },
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "browserslist": "^4.14.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "pug": "^3.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.26.10"
  },
  "devDependencies": {
    "np": "^6.4.0",
    "sirv-cli": "^1.0.6",
    "watchlist": "^0.2.3"
  },
  "engines": {
    "node": "12.x"
  },
  "browserslist": [
    "cover 95% and not dead"
  ],
  "np": {
    "publish": false,
    "releaseDraft": false,
    "tests": false
  }
}
